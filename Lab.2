//popup.js

// Массив випадкових порад або передбачень
const advices = [
    "Сьогодні гарний день для чогось нового!",
    "Пий більше води і залишайся здоровим!",
    "Зроби щось добре для іншої людини.",
    "Пам’ятай, що ти чудовий/чудова!",
    "Не забувай відпочивати — це теж важливо.",
    "Удача на твоєму боці сьогодні!",
    "Посмішка відкриє перед тобою більше дверей, ніж ключі.",
    "Прислухайся до свого серця, воно знає відповідь.",
    "Сьогодні ідеальний день для прогулянки на свіжому повітрі."
];

function getRandomAdvice() {
    const randomIndex = Math.floor(Math.random() * advices.length);
    return advices[randomIndex];
}

// Оновлюємо пораду при натисканні кнопки
document.getElementById('advice-btn').addEventListener('click', function() {
    const adviceElement = document.getElementById('advice');
    adviceElement.textContent = getRandomAdvice();
});
//Функціонал генерує випадкову пораду з масиву advices і оновлює тект на сторінці при натисканні кнопки


//styles.js

body {
    font-family: 'Comic Sans MS', cursive, sans-serif;
    margin: 0;
    padding: 20px;
    width: 250px;
    text-align: center;
    background-color: #fefefe;
    color: #333;
}

.container {
    background-color: #fffae5;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
    font-size: 18px;
    margin-bottom: 10px;
}

.cat-image {
    width: 100px;
    height: auto;
    margin-bottom: 10px;
    border-radius: 50%;
    border: 2px solid #ffcc99;
}

#advice {
    font-size: 14px;
    margin-bottom: 10px;
    font-style: italic;
}

#advice-btn {
    padding: 8px 15px;
    font-size: 14px;
    background-color: #ffcc99;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

#advice-btn:hover {
    background-color: #ff9966;
}

